{
  "version": 2,
  "name": "songwhip-telegram",
  "alias": "telegram.songwhip.com",

  "env": {
    "SONGWHIP_WEB_URL": "https://songwhip.com",
    "SONGWHIP_TELEGRAM_URL": "https://telegram.songwhip.com",
    "TELEGRAM_BOT_TOKEN": "@songwhip-telegram-bot-token",
    "DEBUG": "songwhip*"
  },

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ],

  "functions": {
    "api/*": {
      "memory": 128
    }
  }
}
